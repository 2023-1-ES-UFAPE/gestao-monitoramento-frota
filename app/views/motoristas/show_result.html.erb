<div class="p-5">
  <div class="mb-3">
    <span>
      <i class="fa-solid fa-chevron-left"></i>
      <%= link_to "Back to find motorista", search_motorista_path %>
    </span>
    <h1 class="text-zinc-800 font-bold text-2xl">Rotas de <%= @motorista.nome %>, CPF: <%= @motorista.cpf %></h1>
  </div>

  <div id="rota" class="mt-3 flex flex-col gap-5">
    <% if @rotas.empty? %>
      <p>Nenhuma rota registrada</p>
    <%else%>
      <% @rotas.each do |rotum| %>
        <div class="p-5 bg-white rounded-lg shadow-lg flex justify-between">
          <%= render rotum %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
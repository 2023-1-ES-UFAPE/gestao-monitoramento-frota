<div class="m-auto w-80 p-5 bg-white rounded shadow-lg">
    <h2 class="text-zinc-900 font-bold text-2xl">Ol√°,</h2>
    <p class="text-zinc-700 text-xs pb-6 pr-10">Bem vindo ao Sistema de Gerenciamento de rotas!</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field pb-3">
        <%= f.label :email, class:"text-sm text-zinc-900" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded border-zinc-500 py-2"%>
      </div>

      <div class="field pb-1">
        <%= f.label :password, class:"text-sm text-zinc-900"  %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"rounded border-zinc-500 py-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me , class:"rounded"%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions flex justify-center items-center bg-blue-500 text-white rounded py-2 mt-3 mb-5 cursor-pointer transition duration-300 hover:bg-blue-600">
        <%= f.submit "Entrar"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
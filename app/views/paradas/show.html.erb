<div class="p-5">
  <div class="mb-3">
    <span>
      <i class="fa-solid fa-chevron-left"></i>
      <%= link_to "Back to paradas", paradas_path %>
    </span>
    <h1 class="text-zinc-800 font-bold text-2xl">Visualizar Parada</h1>
  </div>

  <div class="p-5 bg-white rounded-lg shadow-lg flex justify-between">
    <%= render @parada %>

    <div class="flex flex-col gap-3">
      <%= link_to "Edit this parada", edit_parada_path(@parada), class:"bg-slate-500 text-white rounded py-2 px-3 cursor-pointer transition duration-300 hover:bg-slate-600" %>
      <%= button_to "Destroy this parada", @parada, method: :delete,  class:"bg-red-500 text-white rounded py-2 px-3 cursor-pointer transition duration-300 hover:bg-red-600" %>
    </div>
  </div>
</div>
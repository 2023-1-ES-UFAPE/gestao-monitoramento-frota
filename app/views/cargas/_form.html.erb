<%= form_with(model: carga) do |form| %>
  <% if carga.errors.any? %>
    <div style="color: red" class="mb-3">
      <h2><%= pluralize(carga.errors.count, "error") %> prohibited this carga from being saved:</h2>

      <ul>
        <% @carga_atual.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="p-5 bg-white rounded-lg shadow-lg grid grid-cols-2 gap-y-4 justify-center">
    <div>
      <%= form.label :descricao, style: "display: block" %>
      <%= form.text_field :descricao %>
    </div>

    <div>
      <%= form.label :peso, style: "display: block" %>
      <%= form.text_field :peso %>
    </div>

    <div>
      <%= form.label :volume, style: "display: block" %>
      <%= form.text_field :volume %>
    </div>

    <div>
      <%= form.label :valor, style: "display: block" %>
      <%= form.text_field :valor %>
    </div>

    <div>
      <%= form.label :numero_rastreamento, style: "display: block" %>
      <%= form.text_field :numero_rastreamento %>
    </div>

    <div>
      <%= form.label :rota_id, style: "display: block" %>
      <%= form.collection_select :rota_id, Rotum.all, :id, :observacoes, { prompt: 'Selecione uma Rota' }, class: 'form-control' %>
    </div>
  </div>

  <div class="mt-3 h-full flex justify-end">
    <%= form.submit :class=>"bg-blue-500 text-white rounded py-2 px-3 cursor-pointer transition duration-300 hover:bg-blue-600"%>
  </div>
<% end %>
